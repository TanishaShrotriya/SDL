<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    android:layout_margin="4dp"
    tools:context="com.example.shivanii.gamesataclick.userSelectBingo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select user :"
        android:textSize="35dp"
        android:textColor="#F00"
        android:background="#77FFFFFF"

        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_toStartOf="@+id/textView6"
        android:id="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:id="@+id/single"
        android:layout_marginTop="62dp"
        android:onClick="comp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vs Computer"
        android:textSize="25dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/radioButton2"
        android:layout_toEndOf="@+id/single"
        android:textColor="#800080"
        android:id="@+id/textView2" />
    <RadioButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="47dp"
        android:onClick="user"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/single"
        android:layout_alignStart="@+id/single" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Vs Friend"
        android:textSize="25dp"
        android:textColor="#800080"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView6" />


</RelativeLayout>
